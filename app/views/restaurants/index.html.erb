<div class="container">
  <% @restaurants.each do |restaurant| %>
    <h1><%= restaurant.name %></h1>
    <p> <%= restaurant.address %> </p>
    <p> <%= restaurant.phone_number %> </p>
    <p> <%= restaurant.category %> </p>
    <%= link_to "See more details", restaurant_path(restaurant), class: "btn btn-primary" %>
  <% end %>
</div>
