<div class="container">

  <h1>Leave a comment for <%= @restaurant.name %></h1>

  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, as: :select, collection: 0..5 %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>

</div>
